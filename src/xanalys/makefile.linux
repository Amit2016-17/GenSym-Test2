	$(CC) -c $(CC_FLAGS) $(GSI_INC) -DXANALYS $(GWDIR)/lgsi_support.c
	@- if [ -f current.log ]; then rm -f current.log; fi

clean :
	- rm -f *.[oa]
	- rm -f twlibs.so g2libs.so gsilibs.so
