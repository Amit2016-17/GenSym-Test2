	@- if [ -f current.log ]; then rm -f current.log; fi

gw_tcp.o : $(GWDIR)/gw_tcp.c
	@- if [ -f gw_tcp.o ] ; then rm -f gw_tcp.o ; fi
	$(CC) -c $(CC_FLAGS) $(GSI_INC) -DXANALYS $(GWDIR)/gw_tcp.c
	@- if [ -f current.log ]; then rm -f current.log; fi

lgsi_support.o : $(GWDIR)/lgsi_support.c
