function SetBundleDirAndVersion(BundleID)
begin
  switch(BundleID)
    case 1 : TARGETDIR = PROGRAMFILES^"Gensym"^"g2classic"^"deployment";
    BUNDLEVERSION = "5.1r6";
    BUNDLENAME = "G2 Deployment";
    case 2 : TARGETDIR = PROGRAMFILES^"Gensym"^"g2classic"^"development";
    BUNDLEVERSION = "5.1r6";
    BUNDLENAME = "G2 Development";
    default: TARGETDIR = PROGRAMFILES^"Gensym"^"g2classic";
    BUNDLEVERSION = "1.0";
  endswitch;
end;
