<!-- Class path to Ivy's core libs-->
<path id="ivy.classpath">
    <fileset dir="${jfree.ivy.core.libs}">
        <include name="*.jar" />
    </fileset>
</path>

<!-- Target common.init to initialize all IVY related ant tasks those are required -->
<taskdef name="ivy-configure" classname="org.apache.ivy.ant.IvyConfigure" classpathref="ivy.classpath" loaderref="ivy"/>
<taskdef name="ivy-resolve" classname="org.apache.ivy.ant.IvyResolve" classpathref="ivy.classpath" loaderref="ivy"/>
<taskdef name="ivy-retrieve" classname="org.apache.ivy.ant.IvyRetrieve" classpathref="ivy.classpath" loaderref="ivy"/>
<taskdef name="ivy-publish" classname="org.apache.ivy.ant.IvyPublish" classpathref="ivy.classpath" loaderref="ivy"/>
<taskdef name="ivy-report" classname="org.apache.ivy.ant.IvyReport" classpathref="ivy.classpath" loaderref="ivy"/>
<taskdef name="ivy-deliver" classname="org.apache.ivy.ant.IvyDeliver" classpathref="ivy.classpath" loaderref="ivy"/>
<taskdef name="ivy-buildlist" classname="org.apache.ivy.ant.IvyBuildList" classpathref="ivy.classpath" loaderref="ivy"/>
<taskdef name="ivy-install" classname="org.apache.ivy.ant.IvyInstall" classpathref="ivy.classpath" loaderref="ivy"/>
<typedef name="ivy-settings" classname="org.apache.ivy.ant.IvyAntSettings" classpathref="ivy.classpath" loaderref="ivy"/>
<taskdef name="ivy-cleancache" classname="org.apache.ivy.ant.IvyCleanCache" classpathref="ivy.classpath" loaderref="ivy"/>

